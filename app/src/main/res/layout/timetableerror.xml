<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:background="#FF3333">
    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="8dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/error2"
            android:id="@+id/dayplanErrorIcon"
            android:minHeight="48dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/dayplanError"
            android:textColor="#F77"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:textSize="16dp"
            android:layout_toRightOf="@id/dayplanErrorIcon"
            android:text="An error occurred"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:textColor="#FFF"
            android:background="#F77"
            android:padding="8dp"
            android:elevation="6dp"
            android:layout_alignParentRight="true"
            android:id="@+id/dayplanErrorRetry" />

    </RelativeLayout>
</RelativeLayout>